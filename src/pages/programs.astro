---
import BaseLayout from "../layouts/baselayout.astro";
---

<BaseLayout>
  <section class="bg-gradient-to-r from-primary to-secondary text-white py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Our Programs</h1>
      <p class="text-xl opacity-90">Transformative education programs for every stage of learning</p>
    </div>
  </section>

  <section class="py-16 px-4">
    <div class="container mx-auto max-w-7xl">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- CURE Program -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6 border-t-4 border-primary h-full flex flex-col">
            <div class="mb-4">
              <h2 class="text-xl font-bold text-gray-800 mb-2">CURE (SSLC)</h2>
              <span class="bg-primary/10 text-primary text-xs font-semibold px-3 py-1 rounded-full">
                Complete Understanding Real Education
              </span>
            </div>
            <p class="text-gray-600 text-sm mb-4 flex-grow">
              A foundational program specially crafted for SSLC students, focusing on clearing every concept thoroughly. The teaching approach connects textbook content with real-life situations, making learning meaningful and long-lasting.
            </p>
            <div class="space-y-2 mb-4">
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Strong concept understanding</p>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Real-life applications</p>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Confidence building</p>
              </div>
            </div>
            <a href="/programs/cure" class="inline-flex items-center text-primary hover:text-accent">
              Learn more <i class="fas fa-arrow-right ml-2"></i>
            </a>
          </div>
        </div>

        <!-- BRAINY Program -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6 border-t-4 border-accent h-full flex flex-col">
            <div class="mb-4">
              <h2 class="text-xl font-bold text-gray-800 mb-2">BRAINY (+1, +2, VHSE)</h2>
              <span class="bg-accent/10 text-accent text-xs font-semibold px-3 py-1 rounded-full">
                Best Resources for Achieving Intelligent Nurturing of Youth
              </span>
            </div>
            <p class="text-gray-600 text-sm mb-4 flex-grow">
              A comprehensive support system for higher secondary students, providing top-quality study materials, expert mentoring, and personal development tools. Focuses on shaping intelligent, confident individuals.
            </p>
            <div class="space-y-2 mb-4">
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Expert mentoring</p>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Entrance exam preparation</p>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Personal development</p>
              </div>
            </div>
            <a href="/programs/brainy" class="inline-flex items-center text-accent hover:text-primary">
              Learn more <i class="fas fa-arrow-right ml-2"></i>
            </a>
          </div>
        </div>

        <!-- RIOT COURSE -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6 border-t-4 border-primary h-full flex flex-col">
            <div class="mb-4">
              <h2 class="text-xl font-bold text-gray-800 mb-2">RIOT COURSE</h2>
              <span class="bg-primary/10 text-primary text-xs font-semibold px-3 py-1 rounded-full">
                Rapid Improvement in Organized Thinking
              </span>
            </div>
            <p class="text-gray-600 text-sm mb-4 flex-grow">
              Advanced program for college students from diploma to doctoral studies. Enhances higher-order thinking skills, structured learning, and real-world knowledge application.
            </p>
            <div class="space-y-2 mb-4">
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Critical reasoning</p>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Academic planning</p>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Research skills</p>
              </div>
            </div>
            <a href="/programs/riot-course" class="inline-flex items-center text-primary hover:text-accent">
              Learn more <i class="fas fa-arrow-right ml-2"></i>
            </a>
          </div>
        </div>

        <!-- ACE COURSE -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6 border-t-4 border-accent h-full flex flex-col">
            <div class="mb-4">
              <h2 class="text-xl font-bold text-gray-800 mb-2">ACE COURSE</h2>
              <span class="bg-accent/10 text-accent text-xs font-semibold px-3 py-1 rounded-full">
                Achieve, Conquer, Excel
              </span>
            </div>
            <p class="text-gray-600 text-sm mb-4 flex-grow">
              Tailored for students aiming for excellence in academics and personal growth. This program provides advanced resources, strategic learning techniques, and continuous performance feedback.
            </p>
            <div class="space-y-2 mb-4">
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Advanced learning resources</p>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Personalized coaching</p>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Regular assessments and feedback</p>
              </div>
            </div>
            <a href="/programs/ace-course" class="inline-flex items-center text-accent hover:text-primary">
              Learn more <i class="fas fa-arrow-right ml-2"></i>
            </a>
          </div>
        </div>

        <!-- ROOTS Program -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6 border-t-4 border-primary h-full flex flex-col">
            <div class="mb-4">
              <h2 class="text-xl font-bold text-gray-800 mb-2">ROOTS Program</h2>
              <span class="bg-primary/10 text-primary text-xs font-semibold px-3 py-1 rounded-full">
                Realize Opportunities and Open doors to Success
              </span>
            </div>
            <p class="text-gray-600 text-sm mb-4 flex-grow">
              A unique program designed to help students discover their passions and strengths, set realistic goals, and develop a clear roadmap to achieve academic and career success.
            </p>
            <div class="space-y-2 mb-4">
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Self-discovery and assessment</p>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Goal setting and planning</p>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Skill development workshops</p>
              </div>
            </div>
            <a href="/programs/roots" class="inline-flex items-center text-primary hover:text-accent">
              Learn more <i class="fas fa-arrow-right ml-2"></i>
            </a>
          </div>
        </div>

        <!-- ZEN Program -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="p-6 border-t-4 border-accent h-full flex flex-col">
            <div class="mb-4">
              <h2 class="text-xl font-bold text-gray-800 mb-2">ZEN for Job Seekers</h2>
              <span class="bg-accent/10 text-accent text-xs font-semibold px-3 py-1 rounded-full">
                Zero-based Education Network
              </span>
            </div>
            <p class="text-gray-600 text-sm mb-4 flex-grow">
              Comprehensive program for job seekers focusing on competitive exam preparation, interview skills, and professional development. From PSC to banking exams, we provide structured guidance.
            </p>
            <div class="space-y-2 mb-4">
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Exam-specific strategies</p>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Mock tests & interviews</p>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                <p class="text-gray-600 text-sm">Current affairs analysis</p>
              </div>
            </div>
            <a href="/programs/zen" class="inline-flex items-center text-accent hover:text-primary">
              Learn more <i class="fas fa-arrow-right ml-2"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
