---
import BaseLayout from "../../layouts/baselayout.astro";
---

<BaseLayout>
  <section class="bg-primary text-white py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">BRAINY Program</h1>
      <p class="text-xl opacity-90">Best Resources for Achieving Intelligent Nurturing of Youth</p>
    </div>
  </section>

  <section class="py-16 px-4">
    <div class="container mx-auto max-w-4xl">
      <div class="prose prose-lg max-w-none">
        <div class="bg-accent/10 p-6 rounded-lg mb-8">
          <h2 class="text-2xl font-bold text-accent mb-4">Program Overview</h2>
          <p class="text-gray-700">
            BRAINY is a comprehensive support system for students in higher secondary (+1, +2, and VHSE), designed to provide the Best Resources for Achieving Intelligent Nurturing of Youth. It gives access to top-quality study materials, expert mentoring, time management strategies, and personal development tools.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <div>
            <h3 class="text-xl font-bold mb-4">Program Features</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                <span>Top-quality study materials</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                <span>Expert mentoring and guidance</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                <span>Time management strategies</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                <span>Personal development tools</span>
              </li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-xl font-bold mb-4">Learning Outcomes</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <i class="fas fa-star text-yellow-500 mt-1 mr-3"></i>
                <span>Excellence in board examinations</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-star text-yellow-500 mt-1 mr-3"></i>
                <span>Entrance exam readiness</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-star text-yellow-500 mt-1 mr-3"></i>
                <span>Enhanced problem-solving skills</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-star text-yellow-500 mt-1 mr-3"></i>
                <span>Career planning support</span>
              </li>
            </ul>
          </div>
        </div>

        <div class="bg-gray-50 p-8 rounded-lg">
          <h2 class="text-2xl font-bold mb-6">Shape Your Future with BRAINY</h2>
          <p class="mb-6">Join thousands of students who have achieved excellence through our comprehensive program.</p>
          <a href="/contact" class="inline-block bg-primary text-white font-medium px-8 py-3 rounded-lg hover:bg-primary/90 transition duration-300">
            Get Started
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
