        <style>
            /* Modernized pill divider with blue and accent orange */
            .pill-divider {
                position: relative;
                overflow: hidden;
                height: 4px;
            }
            .pill-divider::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 85%;
                height: 100%;
                background-color: #2563eb;
            }
            .pill-divider::after {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 15%;
                height: 100%;
                background-color: #f5945c;
            }
            
            .animate-marquee {
                animation: marquee 30s linear infinite;
            }
            @keyframes marquee {
                0% { transform: translateX(100%); }
                100% { transform: translateX(-100%); }
            }
