            </div>
        </div>
        
        <!-- Google Map with Blue Border -->
        <div class="mb-12 rounded-lg overflow-hidden shadow-lg p-1 bg-primary">
            <iframe
                            style="min-height: 300px;width:100%;border:0;" frameborder="0"
                            src="https://www.google.com/maps/embed/v1/place?q=sinspire+global+ventures&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"></iframe>>
        </div>

        <!-- Divider with Blue Gradient -->
        <div class="h-px bg-gradient-to-r from-primary via-gray-700 to-primary my-8"></div>
        
        <!-- Bottom Footer -->
        <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="text-gray-400 text-sm mb-4 md:mb-0">
                &copy; 2024 Adishesha Institute of Education & Research. All rights reserved.
            </div>
            <div class="flex flex-wrap justify-center md:justify-end gap-4 text-gray-400 text-sm">
                <a href="/privacy-policy" class="hover:text-accent transition duration-300">Privacy Policy</a>
                <a href="/terms" class="hover:text-accent transition duration-300">Terms of Service</a>
                <a href="/sitemap" class="hover:text-accent transition duration-300">Sitemap</a>
            </div>
        </div>
    </div>
</footer>

<!-- Back to Top Button -->
<a id="back-to-top" href="#" class="fixed bottom-6 right-6 bg-accent text-white w-12 h-12 rounded-full flex items-center justify-center shadow-lg transition-all duration-300 scale-0 hover:shadow-glow-accent">
    <i class="fas fa-chevron-up"></i>
</a>

<!-- Scripts -->
<script>
    // Back to top button
    const backToTopButton = document.getElementById('back-to-top');
    
    window.addEventListener('scroll', () => {
        if (window.pageYOffset > 300) {
            backToTopButton.classList.remove('scale-0');
            backToTopButton.classList.add('scale-100');
        } else {
            backToTopButton.classList.remove('scale-100');
            backToTopButton.classList.add('scale-0');
        }
    });
    
    backToTopButton.addEventListener('click', (e) => {
        e.preventDefault();
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
</script>



</body>
</html>